C      The Web Viewer (wv)
C
C             FORTRAN Include
C
C
C	Graphic Primitive Types
C
	INTEGER    WV_POINT,   WV_LINE,   WV_TRIANGLE
	PARAMETER (WV_POINT=0, WV_LINE=1, WV_TRIANGLE=2)
C
C	Plotting Attribute Bits
C
	INTEGER    WV_ON,   WV_TRANSPARENT,   WV_SHADING
	PARAMETER (WV_ON=1, WV_TRANSPARENT=2, WV_SHADING=4)
	INTEGER    WV_ORIENTATION,    WV_POINTS,     WV_LINES
	PARAMETER (WV_ORIENTATION=8,  WV_POINTS=16,  WV_LINES=32)
C
C       VBO & single data Bits
C
        INTEGER    WV_VERTICES,   WV_INDICES,     WV_COLORS
        PARAMETER (WV_VERTICES=1, WV_INDICES=2,   WV_COLORS=4)
        INTEGER    WV_NORMALS,    WV_PINDICES,    WV_LINDICES
        PARAMETER (WV_NORMALS=8,  WV_PINDICES=16, WV_LINDICES=32)
        INTEGER    WV_PCOLOR,     WV_LCOLOR,      WV_BCOLOR
        PARAMETER (WV_PCOLOR=64,  WV_LCOLOR=128,  WV_BCOLOR=256)
        INTEGER    WV_DELETE,     WV_DONE
        PARAMETER (WV_DELETE=512, WV_DONE=1024)
C
C       Data Types
C
        INTEGER    WV_UINT8,    WV_UINT16,   WV_INT32
        PARAMETER (WV_UINT8=1,  WV_UINT16=2, WV_INT32=3)
        INTEGER    WV_REAL32,   WV_REAL64
        PARAMETER (WV_REAL32=4, WV_REAL64=5)
